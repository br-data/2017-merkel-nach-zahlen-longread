{
  "globals": {
    "d3": true,
    "draw": true,
    "marginals": true,
    "modal": true,
    "navigation": true,
    "scroll": true,
    "utils": true,
  },
  "rules": {
    "indent": [2, 2, {"SwitchCase": 1}],
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"],
    "comma-dangle": [1, "never"],
    "no-trailing-spaces": [2, {"skipBlankLines": true}]
  },
  "env": {
    "node": true,
    "browser": true
  },
  "extends": "eslint:recommended"
}
